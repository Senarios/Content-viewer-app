<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <ImageView
            android:id="@+id/idLogoLoginScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_25sdp"
            android:src="@drawable/logo_app" />

        <RelativeLayout
            android:id="@+id/idVerifyPhoneBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/idLoginBtnLogin"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_background_white_color"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center_vertical|center"
                android:text="Get started"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="normal" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/idVerifyPhoneBtn"
            android:layout_below="@+id/onboard_heading"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_40sdp"
            android:fontFamily="@font/montserrat_regular"
            android:text="      Lorem ipsum dolor sit amet,\n  consectetur adipiscing elit, sed do\n
         eiusmod temp et dolore"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/onBoardingBackground"
            android:layout_width="576dp"
            android:layout_height="360dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_60sdp"
            android:background="@drawable/ic_onboarding_screen" />

        <TextView
            android:id="@+id/onboard_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/onBoardingBackground"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Create Fun Content"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="normal" />

    </RelativeLayout>

</RelativeLayout>

